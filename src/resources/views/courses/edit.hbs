<div class="mt-4">
  <h3>Edit course</h3>
  <form method="POST" action="/courses/{{course._id}}?_method=PUT">
    <div class="form-group">
      <label for="description">Course Name</label>
      <input
        class="form-control"
        id="description"
        value="{{course.name}}"
        name="description"
      />
    </div>

    <div class="form-group">
      <label for="name">Course Description</label>
      <input
        class="form-control"
        id="name"
        value="{{course.description}}"
        name="name"
      />
    </div>

    <button type="submit" class="btn btn-primary">Save course</button>
  </form>
</div>